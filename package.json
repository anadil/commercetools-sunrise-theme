{
  "name": "commercetools-sunrise-theme",
  "version": "0.57.0-SNAPSHOT",
  "description": "Theme for commercetools Sunrise online shop",
  "repository": {
    "type": "git",
    "url": "git://github.com/sphereio/commercetools-sunrise-theme.git"
  },
  "config": {
    "github": {
      "username": "automation-commercetools",
      "email": "automation@commercetools.de",
      "repoSlug": "sphereio/commercetools-sunrise-theme"
    },
    "maven": {
      "groupId": "io.commercetools.sunrise",
      "repositoryId": "commercetools-bintray",
      "url": "https://api.bintray.com/maven/commercetools/maven/commercetools-sunrise-theme"
    }
  },
  "bugs": {
    "url": "https://github.com/sphereio/commercetools-sunrise-theme/issues"
  },
  "homepage": "https://github.com/sphereio/commercetools-sunrise-theme#readme",
  "keywords": [
    "Sunrise",
    "commercetools",
    "theme",
    "template",
    "i18n",
    "Handlebars"
  ],
  "scripts": {
    "prebuild": "npm run clean",
    "build": "npm run internal-build-images && npm run internal-build-assets && npm run internal-build-templates",
    "internal-build-images": "npm run copy:images && npm run imagemin",
    "internal-build-assets": "npm run copy:assets && npm run sass && npm run postcss && npm run uglify ",
    "internal-build-templates": "npm run copy:templates && npm run copy:others && npm run json-refs && npm run generate-html",
    "pregenerate-html": "mkdir -p output/site",
    "generate-html": "node scripts/generate-html.js",
    "precopy:images": "mkdir -p output/assets/img",
    "precopy:css": "mkdir -p output/assets/css",
    "precopy:sass": "mkdir -p output/assets/css/sass",
    "precopy:js": "mkdir -p output/assets/js",
    "precopy:fonts": "mkdir -p output/assets/fonts",
    "precopy:templates": "mkdir -p output/templates",
    "precopy:others": "mkdir -p output/i18n && mkdir -p output/translations",
    "copy:images": "cp -r input/assets/img/* output/assets/img/",
    "copy:css": "cp -r input/assets/css/*.css output/assets/css/",
    "copy:sass": "cp -r input/assets/css/*.scss output/assets/css/sass/",
    "copy:js": "cp -r input/assets/js/*.js output/assets/js/",
    "copy:fonts": "cp -r input/assets/fonts/* output/assets/fonts/",
    "copy:assets": "npm run copy:css && npm run copy:sass && npm run copy:js && npm run copy:fonts",
    "copy:templates": "cp input/templates/*.hbs output/templates/ && cp -rp input/templates/partials/* output/templates/",
    "copy:others": "cp input/composer.json output/ && cp -pr input/i18n/* output/i18n/ && node scripts/i18n_files.js",
    "pre-uglify": "npm run copy:js",
    "uglify": "npm run uglify:main && npm run uglify:jqzoom",
    "uglify:main": "uglifyjs output/assets/js/main.js -o output/assets/js/main.min.js -c",
    "uglify:jqzoom": "uglifyjs output/assets/js/jqzoom.js -o output/assets/js/jqzoom.min.js -c",
    "sass": "node-sass --output-style=compressed output/assets/css/sass/main.scss output/assets/css/main.min.css",
    "imagemin": "imagemin output/assets/img/* output/assets/img",
    "postcss": "postcss --use autoprefixer -o output/assets/css/main.min.css output/assets/css/main.min.css",
    "clean": "rm -rf output",
    "clean:output": "rm -rf output composer",
    "clean:images": "rm -rf output/assets/img/*",
    "clean:assets": "rm -rf output/assets/css/* output/assets/js/* output/assets/fonts/*",
    "clean:templates": "rm -rf output/templates* output/i18n/* output/*.html output/*.json",
    "clean:dist": "rm -rf *.jar",
    "json-refs": "node scripts/json-refs.js",
    "env": "env"
  },
  "private": true,
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^6.2.3",
    "glob": "^6.0.4",
    "grunt": "^0.4.5",
    "grunt-asset-fingerprint": "^0.2.1",
    "grunt-compile-handlebars": "^2.0.0",
    "grunt-contrib-clean": "^0.7.0",
    "grunt-contrib-copy": "^0.8.2",
    "grunt-contrib-imagemin": "^1.0.0",
    "grunt-contrib-sass": "^0.9.2",
    "grunt-contrib-uglify": "^0.11.0",
    "grunt-contrib-watch": "^0.6.1",
    "grunt-gh-pages": "^1.0.0",
    "grunt-maven-tasks": "^1.3.5",
    "grunt-postcss": "^0.7.1",
    "handlebars": "^4.0.5",
    "i18next": "^1.10.6",
    "i18next.yaml": "^1.6.0",
    "imagemin-cli": "^2.1.0",
    "json-refs": "^2.0.3",
    "load-grunt-tasks": "^3.4.0",
    "node-sass": "^3.4.2",
    "postcss-cli": "^2.5.1",
    "uglify-js": "^2.6.2"
  }
}
