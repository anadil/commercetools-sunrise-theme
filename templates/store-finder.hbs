<!DOCTYPE html>
<html lang="en">

<head>
  {{> common/htmlhead}}
</head>

<body>
  <div class="darkbg hidden"></div>
  {{> common/header}}

  <div class="container">
    <div class="store-finder-title">{{i18n "storeFinder.title"}}</div>
    <div class="store-finder-wrapper">
      <div class="stores-title">{{i18n "storeFinder.sectionTitle"}}</div>
      <div class="stores-description">{{i18n "storeFinder.description"}}</div>
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
          <div class="store-finder-box">
            <form id="" action="" method="post">
              <div>
                <label class="store-finder-label" for="postcode">{{i18n "storeFinder.postcode"}}
                  <input class="store-finder-input" type="text" name="postcode" value="">
                </label>
                <button id="" class="store-finder-submit-btn">{{i18n "storeFinder.lookUp"}}</button>
              </div>
              <div class="store-finder-option-select">
                <label class="store-finder-label" for="region">{{i18n "storeFinder.orRegion"}}</label>
                <select id="" class="store-finder-select" name="region">
                  <option value="">{{i18n "storeFinder.selectRegion"}}</option>
                  {{#each content.regionSelector}}
                    <option value="{{value}}" {{#if selected}}selected{{/if}}>{{label}}</option>
                  {{/each}}
                </select>
              </div>
            </form>
          </div>
          <div id="store-finder-box-2" class="store-finder-box">
            <form id="" action="" method="post">
              <div class="store-finder-option-select">
                <label class="store-finder-label" for="city">{{i18n "storeFinder.city"}}</label>
                <select id="" class="store-finder-select" name="city">
                  <option value="">{{i18n "storeFinder.selectCity"}}</option>
                  {{#each content.citySelector}}
                    <option value="{{value}}" {{#if selected}}selected{{/if}}>{{label}}</option>
                  {{/each}}
                </select>
              </div>
              <div class="store-finder-option-select">
                <label class="store-finder-label" for="store">{{i18n "storeFinder.store"}}</label>
                <select id="" class="store-finder-select" name="store">
                  <option value="">{{i18n "storeFinder.selectStore"}}</option>
                  {{#each content.storeSelector}}
                    <option value="{{value}}" {{#if selected}}selected{{/if}}>{{label}}</option>
                  {{/each}}
                </select>
              </div>
            </form>
          </div>
          {{!-- Individual store information is currently hardcoded, needs to be adjusted according to the way the data will be fetched --}}
          <div id="store-finder-box-3" class="store-finder-box">
            <div class="row">
              <div class="col-sm-6">
                <div class="store-finder-store-info">
                  <div class="store-finder-store-info-title">{{i18n "storeFinder.address"}}</div><br>
                  <div>Sunrise Street 10</div>
                  <div>Sunrise, 10116</div>
                  <div>Sunrise</div>
                  <div>123456789123</div>
                </div><br>
              </div>
              <div class="col-sm-6">
                <div class="store-finder-store-info">
                  <div class="store-finder-store-info-title">{{i18n "storeFinder.workingHours"}}</div><br>
                  <div><b>Standart Opening Hours</b></div>
                  <div>Monday-Friday: 09.00 - 20.00</div>
                  <div>Weekend: 09.00 - 20.00</div><br>
                  <div><b>Holiday Opening Hours</b></div>
                  <div>Monday-Friday: 09.00 - 20.00</div>
                  <div>Weekend: 09.00 - 20.00</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  {{> common/footer}}
  {{> common/htmlscripts}}
</body>

</html>
